<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.qrapp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_image"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ServerList"
            android:label="Server"></activity>
        <activity
            android:name=".Suggestion"
            android:parentActivityName=".Scanner" />
        <activity
            android:name=".GeoLocation"
            android:label="Location"
            android:parentActivityName=".Select_QR_Code"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Event"
            android:label="Event"
            android:parentActivityName=".Select_QR_Code"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Contact_info"
            android:label="Contact"
            android:parentActivityName=".Select_QR_Code"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Wifi"
            android:label="Wifi"
            android:parentActivityName=".Select_QR_Code"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".URL"
            android:label="URL"
            android:parentActivityName=".Select_QR_Code"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SMS"
            android:label="SMS"
            android:parentActivityName=".Select_QR_Code"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Phone"
            android:label="Phone"
            android:parentActivityName=".Select_QR_Code"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Text"
            android:label="Text"
            android:parentActivityName=".Select_QR_Code"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Email"
            android:label="E-mail"
            android:parentActivityName=".Select_QR_Code"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Select_QR_Code"
            android:label="Select QR Code"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Scanner"
            android:label="Scan QR Code"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path" />
        </provider>
    </application>

</manifest>